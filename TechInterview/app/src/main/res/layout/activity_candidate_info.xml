<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_candidate_info"
    android:layout_width="768dp"
    android:layout_height="1024dp"
    android:background="@color/background"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:textAlignment="textStart">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="360dp"
        android:layout_height="292dp"
        android:background="@color/white"
        android:layout_marginStart="204dp"
        android:layout_marginTop="366dp"
        tools:cardCornerRadius="2dp"
        android:shadowDx="0"
        android:shadowDy="2"
        >

        <TextView
            android:text="@string/complete_profile"
            android:layout_width="147dp"
            android:layout_height="24dp"
            android:id="@+id/textView2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:typeface="normal"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textColor="@color/textcolor"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginTop="84dp"
            android:layout_marginStart="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:hint="@string/candidate_name"
                android:drawableStart="@drawable/ic_person"
                android:textColor="@color/hintcolor"
                android:drawablePadding="32dp"
                android:textSize="16sp"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:hint="@string/email"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="32dp"
                android:id="@+id/editText"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="false"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_domain"
            android:contentDescription="@string/spinner"
            android:id="@+id/imageView"
            android:layout_marginTop="192dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:text="@string/done"
            android:layout_width="43dp"
            android:layout_height="19dp"
            android:layout_marginTop="249dp"
            android:layout_marginStart="285dp"
            android:id="@+id/button"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:letterSpacing="0.15"
            android:textColor="@color/done"
            android:background="@color/white"
            android:shadowRadius="2"
            android:enabled="false"
           />

        <Spinner
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:id="@+id/spinner"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:text="@string/spinner"
            android:textAlignment="textStart"
            android:layout_marginTop="195dp"
            android:layout_marginStart="72dp"/>


    </android.support.v7.widget.CardView>
</LinearLayout>
