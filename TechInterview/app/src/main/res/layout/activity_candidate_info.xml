<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_candidate_info"
    android:layout_width="768dp"
    android:layout_height="1024dp"
    android:background="@color/background"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:textAlignment="textStart">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="360dp"
        android:layout_height="292dp"
        android:background="@color/white"
        android:layout_marginTop="308dp"
        tools:cardCornerRadius="2dp"
        android:shadowDx="0"
        android:shadowDy="2"
        android:layout_marginLeft="204dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="@string/complete_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:typeface="normal"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textColor="@color/textcolor"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:layout_marginStart="72dp">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/candidate_name"
                android:textColor="@color/hintcolor"
                android:textSize="16sp"
                android:inputType="textCapWords"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="131dp"
            android:layout_marginStart="72dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textColor="@color/hintcolor"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_person"
            android:id="@+id/imageView2"
            android:layout_marginTop="84dp"
            android:layout_marginStart="16dp"
            android:contentDescription="" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_mail"
            android:id="@+id/imageView4"
            android:layout_marginTop="140dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_domain"
            android:contentDescription="@string/spinner"
            android:id="@+id/imageView"
            android:layout_marginTop="192dp"
            android:layout_marginStart="16dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:text="@string/spinner"
            android:textAlignment="textStart"
            android:layout_marginTop="192dp"
            android:layout_marginStart="72dp"/>

        <Button
            android:text="@string/done"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="249dp"
            android:layout_marginStart="285dp"
            android:id="@+id/btn_signup"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:letterSpacing="0.15"
            style="@style/buttonStyle"
            android:background="@color/white"
            android:shadowRadius="2"

            android:enabled="false" />




    </android.support.v7.widget.CardView>

</RelativeLayout>
