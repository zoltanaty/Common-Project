<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_candidate_info"
    android:layout_width="768dp"
    android:layout_height="1024dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:background="@color/background"
    android:textAlignment="textStart">

    <!-- TODO CR [High] You can use the RelativeLayout's center_in_parent attribute in this case. [PPeter]-->
    <!-- TODO CR [High] Consider using wrap_content with paddings for a more dynamic implementation. [PPeter]-->
    <!-- TODO CR [Medium] Set elevations for the shadow effect. [PPeter]-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="360dp"
        android:layout_height="292dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="308dp"
        android:background="@android:color/white"
        android:shadowDx="0"
        android:shadowDy="2"
        tools:cardCornerRadius="2dp">

        <!-- TODO CR [Medium] You can add an inner container layout and avoid setting all these margins. [PPeter]-->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="@string/complete_profile"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:typeface="normal" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="87dp">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/hintColor"
                android:textSize="16sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="131dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAlignment="viewStart"
                android:textColor="@color/hintColor"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="84dp"
            android:contentDescription=""
            app:srcCompat="@drawable/ic_person" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/ic_mail" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="192dp"
            android:contentDescription="@string/candidate_info_activity.spinner"
            app:srcCompat="@drawable/ic_domain" />

        <!-- TODO CR [Medium] Double-check the paddings of the spinner items. [PPeter]-->

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="192dp"
            android:longClickable="false"
            android:text="@string/candidate_info_activity.spinner"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <!-- TODO CR [Medium] Consider using the default flat button style: @style/Widget.AppCompat.Button.Borderless [PPeter]-->
        <!-- TODO CR [Medium] Move commonly used dimensions to the dimens.xml file. [PPeter]-->

        <Button
            android:id="@+id/btn_signup"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="285dp"
            android:layout_marginTop="249dp"
            android:background="@android:color/white"
            android:enabled="false"
            android:letterSpacing="0.15"
            android:shadowRadius="2"
            android:text="@string/candidate_info_activity.done"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:clickable="false"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
