<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.halcyonmobile.techinterview.src.activities.QuestionareActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="624dp"
        android:layout_height="360dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="312dp"
        android:background="@color/white"
        android:elevation="@dimen/questionar_activity.card">

        <android.support.v7.widget.CardView
            android:layout_width="624dp"
            android:layout_height="360dp"
            android:background="@color/cardview_dark_background">
        </android.support.v7.widget.CardView>
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_marginTop="672dp"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="194dp"
            android:fontFamily="sans-serif-medium"
            android:text="30:00"
            android:textColor="@color/timerTextColor"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="170dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/Questionare_activity.teft_time"
            android:textColor="@color/timerTextColor"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="574dp"
            android:layout_marginTop="170dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/Questionare_activity.question"
            android:textColor="@color/timerTextColor"
            android:textSize="20sp">

        </TextView>
        <TextView
            android:id="@+id/textViewQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="574dp"
            android:layout_marginTop="194dp"
            android:fontFamily="sans-serif-medium"
            android:text="01/40"
            android:textColor="@color/timerTextColor"
            android:textSize="36sp" />
        <Button
            android:layout_marginStart="312dp"
            android:layout_marginTop="117dp"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="36sp"
            android:textColor="@color/background"
            android:background="@drawable/button_done"
            android:text="@string/Questionare_activity.done"
            android:visibility="invisible"
            />
    </RelativeLayout>


</RelativeLayout>
