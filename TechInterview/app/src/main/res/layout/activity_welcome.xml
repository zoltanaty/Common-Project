<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="768dp"
    android:layout_height="1024dp"
    android:background="@color/background"
    tools:context="com.halcyonmobile.techinterview.CandidateInfo.Welcome">

    <android.support.v7.widget.CardView
        android:layout_width="624dp"
        android:layout_height="332dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="500dp"
        android:id="@+id/cardView" >

        <TextView
            android:text="TextView"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/textView3" />

        <TextView
            android:text="@string/welcometext"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="68dp"
            android:layout_marginEnd="24dp"
            android:id="@+id/textView4" />

        <Button
            android:text="@string/selfie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="289dp"
            android:layout_marginStart="297dp"
            android:background="@color/white"
            android:textColor="@color/background"
            android:id="@+id/button" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:srcCompat="@drawable/placeholder_rocket_2"
        android:layout_marginTop="195dp"
        android:layout_marginStart="245dp"
        android:id="@+id/imageView5"
        />
</RelativeLayout>
