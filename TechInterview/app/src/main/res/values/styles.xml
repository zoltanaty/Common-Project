<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- colorAccent is used as the default value for widgets -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Default color of the text in your views  -->
        <item name="android:textColorPrimary">@color/textColor</item>
        <!-- Window background-->
        <item name="android:windowBackground">@color/colorPrimary</item>

    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="spinnerStyle" parent="">
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingBottom">15sp</item>
    </style>

</resources>
