<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halcyonmobile.techinterview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_a_p_p"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- TODO CR [Medium] Set the windowSoftInputMode attribute to better support the soft keyboard. [PPeter] -->

        <activity
            android:name=".src.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".src.activities.CandidateInfoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
            android:name=".src.activities.WelcomeActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".src.activities.QuestionareActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>