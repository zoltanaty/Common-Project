<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halcyonmobile.techinterview">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_a_p_p"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".src.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".src.activities.CandidateInfoActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".src.activities.WelcomeActivity" />
        <activity
            android:name=".src.activities.QuestionnaireActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".src.activities.CongratulationsActivity" />
        <activity android:name=".src.activities.NoConnectionActivity" />
    </application>

</manifest>